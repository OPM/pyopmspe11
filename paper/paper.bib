title = {The Open Porous Media Flow reservoir simulator},
journal = {Computers \& Mathematics with Applications},
volume = {81},
pages = {159-185},
year = {2021},
issn = {0898-1221},
doi = {10.1016/j.camwa.2020.05.014},
