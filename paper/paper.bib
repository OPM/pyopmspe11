doi = {10.1007/s11242-023-01977-7},
id = {Flemisch2024},
isbn = {1573-1634},
journal = {Transport in Porous Media},
number = {5},
pages = {865--912},
title = {The FluidFlower Validation Benchmark Study for the Storage of CO$_2$},
url = {https://doi.org/10.1007/s11242-023-01977-7},
volume = {151},
